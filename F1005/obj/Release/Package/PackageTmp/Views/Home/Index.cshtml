@{
    ViewBag.Title = "Home Page";
}

@section styles
{
    <style>
        .index {
            height: 400px;
            width:400px;
            border: none;

            display: block;
            margin: auto;
        }
    </style>
}

<div class="jumbotron" style="background-color:white">
    <div class="row">

        <div class="col-lg-7" style="height:500px; background-color: white">
            <div class="col-lg-12" style="height:50px"></div>

            <div id="myCarousel" class="carousel slide" style="background-color:transparent" align="center">
                <!-- 輪播（Carousel）指標(圖下圈圈) -->
                @*<ol class="carousel-indicators">          
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                </ol>*@

                <!-- 輪播（Carousel）項目(圖片本體 -->
                <div class="carousel-inner">
                    <div class="item active" style="height:400px">
                        <img class="index" src=@Url.Content("~/Images/MYINVEST_Whitelogo.png") />
                    </div>
                    <div class="item" style="height:400px">
                        <img class="index" src=@Url.Content("~/Images/logo1.png") />
                    </div>
                    <div class="item" style="height:400px">
                        <img class="index" src=@Url.Content("~/Images/logo2.png") />
                    </div>
                    <div class="item" style="height:400px">
                        <img class="index" src=@Url.Content("~/Images/logo3.png") />
                    </div>
                    <div class="item" style="height:400px">
