                    </div>
                </div>

                <!-- 輪播（Carousel）導航(左右鍵) -->
                @*<a class="carousel-control left" href="#myCarousel"
                   data-slide="prev" style="background-color:transparent">&lsaquo;</a>
                  <a class="carousel-control right" href="#myCarousel"
                   data-slide="next" style="background-color:transparent">&rsaquo;</a>*@
            </div>
        </div>


        <div class="col-lg-5" style="height:500px; background-color: white">
            <span>@Html.Action("Login", "Account")</span>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('.carousel').carousel({
            interval: 3000
        });
    </script>   
    
